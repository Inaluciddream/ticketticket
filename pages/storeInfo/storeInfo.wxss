.store-info-container {
    height: 100vh;
    position: relative;
}
.store-info-item {
    min-height: 80rpx;
}
.store-info-item .item-name {
    float: left;
    width: 25%;
    color: #666464;
    font-size: 32rpx;
    padding: 20rpx 20rpx;
    line-height: 40rpx;
}
.store-info-item .item-value {
    float: left;
    width: 75%;
    color: #000;
    font-size: 32rpx;
    line-height: 40rpx;
    padding: 20rpx 20rpx;
}
.store-qrcode-info-box {
    width: 100%;
    height: 164rpx;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
}
.bottom-text-tip {
    width: 100%;
    font-size: 24rpx;
    text-align: center;
    color: #666464;
    line-height: 24rpx;
    margin-bottom: 8rpx;
}
.qrcode-btn-con {
    border-top: 4rpx solid #F2EEF4;
    width: 100%;
    padding: 12rpx 44rpx;
    height: 118rpx;
}
.qrcode-download-btn {
    float: left;
    width: 100%;
    height: 94rpx;
    border-radius: 10rpx;
    line-height: 94rpx;
    color: #fff;
    background-color: #27C5B7;
    text-align: center;
    font-size: 36rpx;
}