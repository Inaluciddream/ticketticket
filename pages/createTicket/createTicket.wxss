.create-ticket-container {
    background-color: #F5F5F5;
    height: 100vh;
    position: relative;
}
.create-ticket-container .form {
    background-color: #fff;
}
.form-item {
    height: 112rpx;
    position: relative;
    border-bottom: 4rpx solid #F2EEF4;
}
.form-item:last-child {
    border-bottom: none;
}
.right-input {
    position: absolute;
    right: 0;
    top: 0;
    height: 112rpx;
    width: 420rpx;
    color: #B3B0B5;
    font-size: 32rpx;
    padding-right: 44rpx;
}
.form-item .form-name {
    position: absolute;
    left: 0;
    top: 0;
    height: 112rpx;
    width: 200rpx;
    font-size: 32rpx;
    color: #000;
    padding-left: 44rpx;
    line-height: 112rpx;
}
.placeholder-class {
    color: #B3B0B5;
    font-size: 32rpx;
}
.form-item-ticket-num {
    height: 168rpx;
}
.form-item-right-con {
    width: 420rpx;
    height: 168rpx;
    position: absolute;
    right: 0;
    top: 0;
    padding-right: 44rpx;
}
.form-item-use-info {
    height: 226rpx;
}
.right-textarea {
    position: absolute;
    right: 0;
    top: 0;
    width: 420rpx;
    color: #B3B0B5;
    font-size: 32rpx;
    padding-right: 44rpx;
    height: 186rpx;
    padding: 20rpx 0;
}
.create-btn-con {
    width: 100%;
    height: 126rpx;
    background-color: #fff;
    padding: 16rpx 44rpx; 
    position: absolute;
    bottom: 0;
    left: 0;
}
.create-btn {
    width: 100%;
    height: 94rpx;
    background-color: #27C5B7;
    text-align: center;
    line-height: 94rpx;
    color: #fff;
    font-size: 36rpx;
    border-radius: 10rpx;
}