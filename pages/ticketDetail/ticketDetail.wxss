.ticket-detail-container {
    height: 100vh;
    position: relative;
}
.ticket-info-item {
    min-height: 80rpx;
}
.ticket-info-item .item-name {
    float: left;
    width: 25%;
    color: #666464;
    font-size: 32rpx;
    padding: 20rpx 20rpx;
    line-height: 40rpx;
}
.ticket-info-item .item-value {
    float: left;
    width: 75%;
    color: #000;
    font-size: 32rpx;
    line-height: 40rpx;
    padding: 20rpx 20rpx;
}
.bottom-tool {
    width: 100%;
    height: 126rpx;
    padding: 12rpx 30rpx;
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
}
.tool-menu {
    height: 94rpx;
    margin-right: 44rpx;
    float: left;
    width: 60rpx;
}
.share-btn {
    float: left;
    width: 482rpx;
    height: 94rpx;
    border-radius: 10rpx;
    line-height: 94rpx;
    color: #fff;
    background-color: #27C5B7;
    text-align: center;
    font-size: 36rpx;
}